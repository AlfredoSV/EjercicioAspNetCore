@{
    ViewData["Titulo"] = "Articulos";
}
@model Articulo

<div class="container">

    <form>
        <div class="row">
            <h4 class="text-muted">Crud - @ViewData["Titulo"]</h4>
        </div>

        <div class="row">

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="mb-3">

                    <label>Nombre:</label>
                    <input asp-for="Nombre" class="form-control form-control-sm  mt-2" type="text">

                </div>
            </div>

            <div class="col-sm-4 col-md-6 col-lg-4">

                <div class=" mb-3">
                    <label>Descripción:</label>
                    <input asp-for="Descripcion" type="text" class="form-control form-control-sm  mt-2">
                </div>

            </div>

            <div class="col-sm-4 col-md-6 col-lg-4">

                <div class=" mb-3">
                    <label>Precio:</label>
                    <input asp-for="Precio" type="number" step="0.1" class="form-control form-control-sm  mt-2">
                </div>

            </div>

        </div>


        <div class="row">

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="mb-3">

                    <label>Imagen:</label>
                    <input asp-for="Imagen" class="form-control-file mt-2" type="file">

                </div>
            </div>

            <div class="col-sm-4 col-md-6 col-lg-4">

                <div class=" mb-3">
                    <label>Stock:</label>
                    <input asp-for="Stock" type="number" class="form-control form-control-sm  mt-2">
                </div>

            </div>


        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" id="btnGuardarPaciente" class="btn btn-success">Enviar</button>

            </div>

        </div>

    </form>

    <div class="dx-viewport mt-3">

        <div class="demo-container">
            <div id="gridArticulos"></div>
        </div>
    </div>

</div>


@section scripts {
    <script src="~/js/ArticuloJs/site.js" asp-append-version="true"></script>
}

