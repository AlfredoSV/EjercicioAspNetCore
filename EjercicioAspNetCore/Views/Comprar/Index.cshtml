@{
}



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="bologna-list" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" href="#description" role="tab" aria-controls="description" aria-selected="true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-wallet" viewBox="0 0 16 16">
                                    <path d="M0 3a2 2 0 0 1 2-2h13.5a.5.5 0 0 1 0 1H15v2a1 1 0 0 1 1 1v8.5a1.5 1.5 0 0 1-1.5 1.5h-12A2.5 2.5 0 0 1 0 12.5V3zm1 1.732V12.5A1.5 1.5 0 0 0 2.5 14h12a.5.5 0 0 0 .5-.5V5H2a1.99 1.99 0 0 1-1-.268zM1 3a1 1 0 0 0 1 1h12V2H2a1 1 0 0 0-1 1z" />
                                </svg> Mi carrito
                            </a>
                        </li>

                    </ul>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Realizar compra</h4>


                    <div class="tab-content mt-3">

                        <div class="row">

                            <div class="col-sm-12 col-md-6 col-lg-4">

                                <div class="mb-3">

                                    <label>Tienda:</label>
                                    <select asp-items="@ViewBag.Tiendas" onchange="cargarArticulos()" id="tienda" class="form-control form-control-sm  mt-2">
                                    </select>
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-sm-4 col-md-6 col-lg-4">

                                <div class=" mb-3">
                                    <label>Articulo:</label>
                                    <select onchange="cargarDetalleArticulo()" id="articulo" class="form-control form-control-sm  mt-2">
                                    </select>
                                    <span class="text-danger"></span>
                                </div>

                            </div>

                            <div class="col-sm-4 col-md-6 col-lg-4">

                                <div class=" mb-3">
                                    <label>Precio:</label>
                                    <input id="precio" readonly class="form-control form-control-sm  mt-2" type="text">
                                    <span class="text-danger"></span>
                                </div>

                            </div>

                        </div>

                        <br />

                        <div class="row">

                            <div class="col-sm-12 col-md-6 col-lg-4">

                                <div class="mb-3">
                                    <label>Stock:</label>
                                    <input id="stock" readonly class="form-control form-control-sm  mt-2">
                                    <span class="text-danger"></span>

                                </div>
                            </div>



                            <div class="col-sm-8 col-md-6 col-lg-4">

                                <div class="mb-3">
                                    <label>Cantidad:</label>
                                    <input id="cantidad" min="1" class="form-control form-control-sm  mt-2" type="number">
                                    <span class="text-danger"></span>
                                </div>

                            </div>

                        </div>


                        <div class="row">


                            <div class="col-sm-4 col-md-6 col-lg-4">

                                <div class=" mb-3">
                                    <button class="btn btn-primary" onclick="agregarAcarrito()">Agregar</button>
                                    <button class="btn btn-danger" onclick="cancelarCompra()">Cancelar</button>
                                    <button class="btn btn-success" onclick="finalizarCompra()">Finalizar compra</button>
                                </div>

                            </div>

                            <div class="col-sm-8 col-md-6 col-lg-8">

                                <div class="float-right mb-3">
                                    <h2>Total:$<span id="total">0.00</span></h2>
                                </div>

                            </div>


                        </div>

                        <div class="row">

                            <div class="col-12">

                                <div class="mb-3">

                                    <table class="table table-striped">
                                        <thead>
                                            <tr>

                                                <th scope="col">Nombre</th>
                                                <th scope="col">Cantidad</th>
                                                <th scope="col">Precio</th>
                                                <th scope="col">Comandos</th>

                                            </tr>
                                        </thead>
                                        <tbody id="cuerpoTablaCompra">
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/Compras/site.js" asp-append-version="true"></script>
}


