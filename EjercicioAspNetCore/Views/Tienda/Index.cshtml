@{
    ViewData["Titulo"] = "Tienda";
}

@model Tienda

<div class="container">
    <form method="post" asp-controller="Tienda" asp-action="CrearTienda">
        <div class="row">
            <h4 class="text-muted">Crud - Tienda</h4>
        </div>

        <div class="row">

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="mb-3">

                    <label>Sucursal:</label>
                    <input asp-for="Sucursal" class="form-control form-control-sm  mt-2" type="text">
                    <span asp-validation-for="Sucursal" class="text-danger"></span>

                </div>
            </div>

            <br />

            <div class="col-sm-4 col-md-6 col-lg-4">

                <div class=" mb-3">
                    <label>Código postal:</label>
                    <input asp-for="CodigoPostal" type="text" class="form-control form-control-sm  mt-2">
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>

            </div>

            <div class="col-sm-4 col-md-6 col-lg-4">

                <div class=" mb-3">
                    <label>Estado:</label>
                    <input asp-for="Estado" type="text" class="form-control form-control-sm  mt-2">
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

            </div>

        </div>

        <div class="row">

            <div class="col-sm-12 col-md-6 col-lg-4">

                <div class="mb-3">

                    <label>Delegación o municipio:</label>
                    <input asp-for="DelegacionMunicipio" class="form-control form-control-sm  mt-2" type="text">
                    <span asp-validation-for="DelegacionMunicipio" class="text-danger"></span>
                </div>
            </div>

            <div class="col-sm-4 col-md-6 col-lg-4">

                <div class=" mb-3">
                    <label>Calle y número:</label>
                    <input asp-for="CalleNum" type="text" class="form-control form-control-sm  mt-2">
                    <span asp-validation-for="CalleNum" class="text-danger"></span>
                </div>

            </div>


        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" id="btnGuardarPaciente" class="btn btn-success">Enviar</button>

            </div>

        </div>
        @if (ViewBag.TiendaArticulosAsociados != null)
        {
            if (ViewBag.TiendaArticulosAsociados)
            {
                <span class="text-danger">Esta tienda tiene articulos relacionados, primero elimina los articulos.</span>
            }

        }

    </form>

    <div class="dx-viewport mt-3">

        <div class="demo-container">
            <div id="gridTiendas"></div>
        </div>
    </div>

</div>


<div class="modal fade" id="detalleTienda" tabindex="-1" aria-labelledby="detalleTienda" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalle Tienda</h5>

            </div>
            <div class="modal-body" id="cuerpoDetalleModal">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="cerrarModal()">Cerrar</button>

            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/TiendaJs/site.js" asp-append-version="true"></script>
}
